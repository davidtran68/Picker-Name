include ../mixins/icons

.main
  .control-group
    button#fullscreen-button.icon-button.icon-button--small
      +svg-icon.red.big(svg-icon-name='fullscreen')
    button#settings-button.icon-button.icon-button--small
      +svg-icon.red.big(svg-icon-name='settings')

  canvas#confetti-canvas.confetti

  #lucky-draw
    img.title(src="~@images/title.svg" alt="Lucky Draw")

    .slot
      .slot__outer
        .slot__inner
          .slot__shadow
          #reel.reel

      #sunburst.sunburst
        img(src="~@images/sunburst.svg" alt="sunburst")

    button#draw-button.solid-button Quay Số

  #settings.settings
    #settings-panel.settings__panel
      div.settings__panel__group
        h1.settings__title Cài đặt
        div.input-group
          label.input-label(for="name-list") Danh sách quay số
          textarea.input-field.input-field--textarea(rows="8" placeholder="Mỗi tên cách nhau bằng xuống dòng" id="name-list")

        div.input-group.input-group--2-column
          label.input-label(for="remove-from-list") Xoá người trúng thưởng khỏi danh sách
          label.input--switch
            input(type="checkbox" checked="true" id="remove-from-list")
            span.slider

        div.input-group.input-group--2-column
          label.input-label(for="enable-sound") Bật hiệu ứng âm thanh
          label.input--switch
            input(type="checkbox" checked="true" id="enable-sound")
            span.slider
      div.settings__panel__group
        button#settings-save.solid-button.solid-button Lưu
        button#settings-close.solid-button.solid-button--danger Huỷ và đóng

